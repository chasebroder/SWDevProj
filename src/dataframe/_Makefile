build:
	g++ -pthread --std=c++11 bench.cpp

run:
	wget -O zipped_data https://github.com/mkierzenka/SWDevA5data/blob/master/zipped_data.zip?raw=true && unzip zipped_data
	./a.out

demoLength:
	g++ -pthread --std=c++11 -o demoLength demoLength.cpp
	./demoLength

demoFinder:
	g++ -pthread --std=c++11 -o demoFinder demoFinder.cpp
	./demoFinder
	
.SILENT:clean
clean:
	rm -f a.out demoLength demoFinder zipped_data datafile.txt datafile_haystack.txt